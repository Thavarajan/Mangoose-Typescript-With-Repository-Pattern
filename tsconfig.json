{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6", "dom"],
        "types": ["node", "mongoose", "express", "method-override", "body-parser"],
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "lib",
        "noEmitOnError": false,
        "typeRoots": [
            "../node_modules/@types/"
        ],
        "suppressImplicitAnyIndexErrors": false
    },
    "exclude": ["node_modules"]
}